---
import { Icon } from 'astro-icon/components'
---

<header>
  <nav class="border-gray-200 bg-neutral-500 px-4 py-2.5 dark:bg-gray-800 lg:px-6">
    <div
      class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between"
    >
      <a href="#" class="flex items-center">
        <Icon name="logo" class="h-8 lg:h-12 w-auto" />
      </a>
      <div class="flex items-center lg:order-2">
        <a
          href="#"
          class="mr-2 rounded-lg bg-primary-500 px-4 py-2 text-sm font-medium text-white hover:bg-primary-700 focus:outline-none focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 lg:px-5 lg:py-2.5"
          >Get started</a
        >
        <button
          data-collapse-toggle="mobile-menu-2"
          type="button"
          class="ml-1 inline-flex items-center rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 lg:hidden"
          aria-controls="mobile-menu-2"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <Icon name="menu" class="size-6" />
          <Icon name="mdi:window-close" class="size-6 hidden" />
        </button>
      </div>
      <div
        class="hidden w-full items-center justify-between lg:order-1 lg:flex lg:w-auto"
        id="mobile-menu-2"
      >
        <ul
          class="mt-4 flex flex-col font-medium lg:mt-0 lg:flex-row lg:space-x-8"
        >
          <li>
            <a
              href="#"
              class="block rounded bg-secondary-400 py-2 pl-3 pr-4 text-white dark:text-white lg:bg-transparent lg:p-0 lg:text-primary-700"
              aria-current="page">Home</a
            >
          </li>
          <li>
            <a
              href="#"
              class="block border-b border-gray-100 py-2 pl-3 pr-4 text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white lg:border-0 lg:p-0 lg:hover:bg-transparent lg:hover:text-primary-700 lg:dark:hover:bg-transparent lg:dark:hover:text-white"
              >Products</a
            >
          </li>
          <li>
            <a
              href="#"
              class="block border-b border-gray-100 py-2 pl-3 pr-4 text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white lg:border-0 lg:p-0 lg:hover:bg-transparent lg:hover:text-primary-700 lg:dark:hover:bg-transparent lg:dark:hover:text-white"
              >Services</a
            >
          </li>
          <li>
            <a
              href="#"
              class="block border-b border-gray-100 py-2 pl-3 pr-4 text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white lg:border-0 lg:p-0 lg:hover:bg-transparent lg:hover:text-primary-700 lg:dark:hover:bg-transparent lg:dark:hover:text-white"
              >Company</a
            >
          </li>
          <li>
            <a
              href="#"
              class="block border-b border-gray-100 py-2 pl-3 pr-4 text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white lg:border-0 lg:p-0 lg:hover:bg-transparent lg:hover:text-primary-700 lg:dark:hover:bg-transparent lg:dark:hover:text-white"
              >Case Studies</a
            >
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
