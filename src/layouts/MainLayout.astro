---
import CoreLayout from './CoreLayout.astro';
import SiteFooter from './SiteFooter.astro';
import SiteHeader from './SiteHeader.astro';

interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description, image } = Astro.props;
---

<CoreLayout title={title} description={description} image={image}>
  <SiteHeader />
  <main class="min-h-[50dvh]">
    <slot />
  </main>
  <SiteFooter />
</CoreLayout>
