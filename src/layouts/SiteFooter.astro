---
import { Icon } from "astro-icon/components";
import FooterLink from "@/components/FooterLink.astro";
import SubscribeButton from "@/components/SubscribeButton.astro";
import LandingText from "@/data/landing-text.json";
import type { RouteItem } from "@/types";
import siteInfo from "../data/site-info.json";
import {
  companyRoutes as headerCompanyRoutes,
  solutionRoutes,
} from "./SiteHeader.astro";

const companyRoutes: RouteItem[] = [
  { label: "Solutions", url: "/solutions" },
  ...headerCompanyRoutes,
];
const productRoutes = [
  { label: "ello Trac", url: "/products/ello-trac" },
  { label: "ello 360", url: "/products/ello-360" },
  { label: "We School", url: "/products/we-school" },
];
const resourceRoutes: RouteItem[] = [
  { label: "Articles", url: "/resources/articles" },
  { label: "Case Studies", url: "/resources/case-studies" },
  { label: "Contact", url: "/company/contact" },
  { label: "FAQ's", url: "/resources/faqs" },
  { label: "Status", url: "#" },
];
const extraRoutes: RouteItem[] = [
  { label: "Licenses", url: "/licenses" },
  { label: "Terms", url: "/terms-of-service" },
  { label: "Privacy Policy", url: "/privacy-policy" },
  { label: "Cookies", url: "/cookies" },
];
---

<footer class="bg-secondary-600">
  <div class="container mx-auto px-2 lg:px-0 pb-4 pt-16">
    <div class="flex flex-col md:flex-row gap-8 lg:px-8">
      <!-- Left Content -->
      <div class="lg:max-w-96 flex flex-col gap-8 sm:justify-center">
        <a href="/" aria-label="Footer Logo" class="self-center md:self-auto">
          <Icon name="logow" class="h-16 w-auto" />
        </a>
        <p class="max-w-sm text-white self-center md:self-auto">
          {LandingText.footerTagLine}
        </p>
        <SubscribeButton />
      </div>

      <!-- Right Navigation -->
      <div class="flex-1 grid grid-cols-1 gap-6 lg:grid-cols-4 px-4 lg:px-0">
        <div>
          <p class="text-lg font-bold text-white">{"Products"}</p>
          <div class="mt-5 flex flex-col items-start space-y-2">
            {
              productRoutes.map((item) => (
                <FooterLink label={item.label} url={item.url} />
              ))
            }
          </div>
        </div>
        <div>
          <p class="text-lg font-semibold text-white">{"Company"}</p>
          <div class="mt-5 flex flex-col items-start space-y-2">
            {
              companyRoutes.map((item) => (
                <FooterLink label={item.label} url={item.url} />
              ))
            }
          </div>
        </div>
        <div>
          <p class="text-lg font-semibold text-white">{"Resources"}</p>
          <div class="mt-5 flex flex-col items-start space-y-2">
            {
              resourceRoutes.map((item) => (
                <FooterLink label={item.label} url={item.url} />
              ))
            }
          </div>
        </div>
        <div>
          <p class="text-lg font-semibold text-white">{"Solutions"}</p>
          <div class="mt-5 flex flex-col items-start space-y-2">
            {
              solutionRoutes.map((item) => (
                <FooterLink label={item.label} url={item.url} />
              ))
            }
          </div>
        </div>
      </div>
    </div>
    <hr class="my-4 border-white md:my-8" />
    <div class="mb-16 flex gap-3 justify-center self-center lg:self-end">
      {
        Object.values(siteInfo.socials).map((item) => (
          <a
            href={item.url}
            aria-label={item.label}
            target="_blank"
            class="text-white transition-colors duration-300 hover:text-secondary-300"
          >
            <Icon name={item.icon} class="size-8" />
          </a>
        ))
      }
    </div>
    <div class="flex flex-col items-center sm:flex-row px-2 sm:justify-between">
      <p class="text-sm mt-1 text-white sm:mt-0">
        &copy; {new Date().getFullYear()}
        {"drolx Lab"}, All Rights Reserved.
      </p>
      <div class="flex -mx-2 sm:mt-0">
        {
          extraRoutes.map((item) => (
            <a
              href={item.url}
              class="mx-2 text-sm text-white"
              aria-label={item.label}
            >
              {item.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>

<style>
  svg path {
    fill: #fff;
  }

  [astro-icon="logo"] [fill="currentColor"] {
    fill: #fff;
  }
</style>
