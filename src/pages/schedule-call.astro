---
import { Icon } from "astro-icon/components";
import SecondaryHero from "@/components/SecondaryHero.astro";
import SecondaryHeroStyle from "@/components/SecondaryHeroStyle.astro";
import MainLayout from "../layouts/MainLayout.astro";

export const title = "Schedule Call";
export const description =
  "Set a time for a more lengthy discussion to understand your requirements";

const topics = [
  {
    id: "demo",
    label: "Demo Walk Through",
    description:
      "Let's showcase existing solution that might meet your expectation",
    icon: "mdi:laptop",
  },
  {
    id: "clarity",
    label: "Requirement Clarity",
    description: "Let's discuss and clarify your business requirements",
    icon: "mdi:lightbulb-question-outline",
  },
  {
    id: "recommendation",
    label: "Project Recommendation",
    description: "Get expert recommendations for your project approach",
    icon: "mdi:chart-box-outline",
  },
  {
    id: "estimation",
    label: "Project Estimation",
    description: "Discuss timeline, resources, and cost estimation",
    icon: "mdi:calculator-outline",
  },
  {
    id: "digital-transformation",
    label: "Digital Transformation",
    description: "Explore how we can transform your business processes",
    icon: "mdi:lightbulb-on-outline",
  },
  {
    id: "custom",
    label: "Custom Request",
    description: "Discuss any custom or specific requirements",
    icon: "mdi:cog-outline",
  },
];

const timeSlots = [
  "09:00 AM",
  "10:00 AM",
  "11:00 AM",
  "02:00 PM",
  "03:00 PM",
  "04:00 PM",
];
---

<MainLayout {title} {description}>
  <SecondaryHero {title} {description}>
    <SecondaryHeroStyle icon="mdi:calendar-multiple-check" />
  </SecondaryHero>

  <section class="py-6 px-4">
    <div class="max-w-5xl mx-auto">
      <!-- Schedule Form -->
      <div class="card bg-base-100 shadow-lg mb-8">
        <div class="card-body">
          <h2 class="card-title text-2xl mb-6">{"Schedule Your Call"}</h2>
          <form id="scheduleForm" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <input
                type="text"
                placeholder="Full Name"
                class="input w-full lg:col-span-2"
              />
              <select class="select appearance-none w-full">
                <option disabled selected>Pick Topic</option>
                {topics.map((topic) => <option>{topic.label}</option>)}
              </select>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="input validator w-full">
                  <Icon name="mdi:email" class="size-5 text-neutral-800" />
                  <input type="email" placeholder="your@domain.com" required />
                </label>
                <div class="validator-hint hidden">
                  Enter valid email address
                </div>
              </div>
              <div>
                <label class="input validator w-full">
                  <Icon name="mdi:phone" class="size-5 text-neutral-800" />
                  <input
                    type="tel"
                    class="tabular-nums"
                    required
                    placeholder="Phone"
                    pattern="[0-9]*"
                    minlength="10"
                    maxlength="14"
                    title="Must be a least 10 digits"
                  />
                </label>
                <div class="validator-hint hidden">Must be 10 digits</div>
              </div>
            </div>

            <!-- Date & Time Selection -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <input type="date" class="input w-full" />
              <select class="select select-bordered w-full" required>
                <option disabled selected>Select a time</option>
                {timeSlots.map((slot) => <option value={slot}>{slot}</option>)}
              </select>
            </div>

            <!-- Additional Requirements -->
            <fieldset class="fieldset w-full">
              <legend class="fieldset-legend"
                >Additional Requirements (Optional)</legend
              >
              <textarea
                class="textarea h-32 w-full"
                placeholder="Tell us more about your project or specific requirements..."
              ></textarea>
              <div class="label">Optional</div>
            </fieldset>

            <!-- Submit Button -->
            <div class="flex px-1 justify-center">
              <button type="submit" class="btn btn-primary btn-lg flex-1 lg:max-w-96">
                <Icon name="mdi:calendar-plus" class="size-5" />
                <span>{"Schedule Call"}</span>
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Call Details Info -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="card bg-primary text-primary-content shadow-lg">
          <div class="card-body">
            <h3 class="card-title flex items-center gap-2">
              <Icon name="mdi:information-outline" class="size-6" />
              What to Expect
            </h3>
            <ul class="space-y-3 mt-4">
              {
                [
                  "Professional consultation with our experts",
                  "In-depth discussion of your requirements",
                  "Personalized recommendations",
                  "Timeline and cost estimation",
                  "Next steps and action plan",
                ].map((item) => (
                  <li class="flex items-start gap-3">
                    <Icon
                      name="mdi:check-circle"
                      class="size-5 flex-shrink-0 mt-0.5"
                    />
                    <span>{item}</span>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>

        <div class="card bg-secondary text-secondary-content shadow-lg">
          <div class="card-body">
            <h3 class="card-title flex items-center gap-2">
              <Icon name="mdi:clock-outline" class="size-6" />
              Call Details
            </h3>
            <div class="space-y-4 mt-4">
              <div>
                <p class="text-sm opacity-90">Duration</p>
                <p class="font-semibold">30 - 60 minutes</p>
              </div>
              <div>
                <p class="text-sm opacity-90">Format</p>
                <p class="font-semibold">Google Meet / Video Call</p>
              </div>
              <div>
                <p class="text-sm opacity-90">Availability</p>
                <p class="font-semibold">Monday - Friday, 9 AM - 5 PM WAT</p>
              </div>
              <div>
                <p class="text-sm opacity-90">Confirmation</p>
                <p class="font-semibold">Email & Calendar Invite</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    document
      .getElementById("scheduleForm")
      ?.addEventListener("submit", function (e) {
        e.preventDefault();
        alert(
          "Thank you for scheduling a call! We'll send you a confirmation email shortly.",
        );
      });
  </script>
</MainLayout>
