---

<MainLayout {title} {description}>
  <BreadcrumbSection />

  <!-- Hero Section -->
  <section
    class="bg-gradient-to-r from-primary to-primary-700 text-white py-20 px-4"
  >
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-5xl font-bold mb-4">WeSchool</h1>
          <p class="text-xl opacity-90 mb-6">
            Cloud-based education ERP platform designed for modern schools
          </p>
          <p class="text-lg opacity-75 mb-8">
            Comprehensive solution for academic management, student tracking,
            and parent engagement all in one platform
          </p>
          <div class="flex gap-4 flex-wrap">
            <a href="/get-started" aria-label="Get Started" class="btn btn-lg btn-white text-primary">
              Start Free Trial
            </a>
            <a href="/schedule-call" aria-label="Schedule Demo" class="btn btn-lg btn-outline">
              Schedule Demo
            </a>
          </div>
        </div>
        <div class="flex justify-center">
          <div class="bg-white/10 p-12 rounded-2xl backdrop-blur">
            <Icon name="mdi:school" class="size-48 text-white" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Overview Stats -->
  <section class="py-16 px-4 bg-primary-50">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {
          [
            { number: "10+", label: "Schools Using WeSchool" },
            { number: "5K+", label: "Students Managed" },
            { number: "1K+", label: "Parents Connected" },
            { number: "99.9%", label: "Uptime SLA" },
          ].map((stat) => (
            <div class="text-center">
              <p class="text-4xl lg:text-5xl font-bold text-primary mb-2">
                {stat.number}
              </p>
              <p class="text-lg text-base-content/70">{stat.label}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Core Features -->
  <section class="py-20 px-4 bg-base-100">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary-900 mb-4">Core Features</h2>
        <p class="text-lg text-base-content/70">
          Everything your school needs to succeed
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          features.map((feature) => (
            <div class="card bg-white border border-base-200 shadow-lg hover:shadow-xl transition-shadow">
              <div class="card-body">
                <div class="flex items-start justify-between mb-4">
                  <Icon name={feature.icon} class="size-12 text-primary" />
                </div>
                <h3 class="card-title text-lg mb-3">{feature.title}</h3>
                <p class="text-base-content/70 mb-6">{feature.description}</p>
                <div class="space-y-2">
                  {feature.details.map((detail) => (
                    <div class="flex items-center gap-2 text-sm">
                      <Icon
                        name="mdi:check-circle"
                        class="size-4 text-success flex-shrink-0"
                      />
                      <span>{detail}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- User Roles Benefits -->
  <section class="py-20 px-4 bg-primary-50">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary-900 mb-4">
          Tailored for All Stakeholders
        </h2>
        <p class="text-lg text-base-content/70">
          Dedicated tools for students, parents, and teachers
        </p>
      </div>

      <!-- Student Features -->
      <div class="mb-16">
        <div class="flex items-center gap-3 mb-8">
          <div class="bg-primary/20 p-3 rounded-full">
            <Icon name="mdi:account-student" class="size-8 text-primary" />
          </div>
          <h3 class="text-2xl font-bold text-primary-900">For Students</h3>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            studentFeatures.map((feature) => (
              <div class="card bg-white shadow-lg">
                <div class="card-body items-center text-center">
                  <Icon name={feature.icon} class="size-12 text-primary mb-4" />
                  <h4 class="card-title text-lg">{feature.title}</h4>
                  <p class="text-sm text-base-content/70">
                    {feature.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Parent Features -->
      <div class="mb-16">
        <div class="flex items-center gap-3 mb-8">
          <div class="bg-secondary/20 p-3 rounded-full">
            <Icon name="mdi:account-multiple" class="size-8 text-secondary" />
          </div>
          <h3 class="text-2xl font-bold text-primary-900">For Parents</h3>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            parentFeatures.map((feature) => (
              <div class="card bg-white shadow-lg">
                <div class="card-body items-center text-center">
                  <Icon
                    name={feature.icon}
                    class="size-12 text-secondary mb-4"
                  />
                  <h4 class="card-title text-lg">{feature.title}</h4>
                  <p class="text-sm text-base-content/70">
                    {feature.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Teacher Features -->
      <div>
        <div class="flex items-center gap-3 mb-8">
          <div class="bg-accent/20 p-3 rounded-full">
            <Icon name="mdi:human-male-board" class="size-8 text-accent" />
          </div>
          <h3 class="text-2xl font-bold text-primary-900">For Teachers</h3>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            teacherFeatures.map((feature) => (
              <div class="card bg-white shadow-lg">
                <div class="card-body items-center text-center">
                  <Icon name={feature.icon} class="size-12 text-accent mb-4" />
                  <h4 class="card-title text-lg">{feature.title}</h4>
                  <p class="text-sm text-base-content/70">
                    {feature.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 px-4 bg-base-100">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary-900 mb-4">
          Why Schools Choose WeSchool
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          benefits.map((benefit) => (
            <div class="text-center">
              <div class="flex justify-center mb-4">
                <div class="bg-primary/10 p-4 rounded-full">
                  <Icon name={benefit.icon} class="size-8 text-primary" />
                </div>
              </div>
              <p class="text-3xl font-bold text-primary mb-2">
                {benefit.metric}
              </p>
              <h3 class="card-title text-lg mb-2">{benefit.title}</h3>
              <p class="text-sm text-base-content/70">{benefit.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Modules Overview -->
  <section class="py-20 px-4 bg-primary-50">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary-900 mb-4">
          Comprehensive Modules
        </h2>
        <p class="text-lg text-base-content/70">
          Integrated systems for complete school management
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          modules.map((module) => (
            <div class="card bg-white shadow-lg hover:shadow-xl transition-shadow">
              <div class="card-body">
                <div class="flex items-start justify-between mb-4">
                  <div class={`bg-${module.color}/10 p-3 rounded-lg`}>
                    <Icon
                      name={module.icon}
                      class={`size-8 text-${module.color}`}
                    />
                  </div>
                </div>
                <h3 class="card-title text-xl mb-3">{module.name}</h3>
                <p class="text-base-content/70">{module.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- For Different School Sizes -->
  <section class="py-20 px-4 bg-base-100">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary-900 mb-4">
          Scalable for Schools of Any Size
        </h2>
        <p class="text-lg text-base-content/70">
          From small private schools to large institutions
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          schoolSizes.map((size) => (
            <div class="card bg-white border border-base-200 shadow-lg hover:shadow-xl transition-shadow">
              <div class="card-body items-center text-center">
                <Icon name={size.icon} class="size-16 text-primary mb-4" />
                <h3 class="card-title text-xl">{size.name}</h3>
                <p class="text-sm font-semibold text-secondary mb-4">
                  {size.students}
                </p>
                <div class="space-y-2 w-full">
                  {size.features.map((feature) => (
                    <div class="flex items-center gap-2 text-sm">
                      <Icon
                        name="mdi:check-circle"
                        class="size-4 text-success flex-shrink-0"
                      />
                      <span>{feature}</span>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Deployment Options -->
  <section class="py-20 px-4 bg-primary-50">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary-900 mb-4">
          Flexible Deployment Options
        </h2>
        <p class="text-lg text-base-content/70">
          Choose what works best for your school
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="card bg-white shadow-lg border border-base-200">
          <div class="card-body">
            <div class="flex items-center gap-4 mb-4">
              <div class="bg-primary/10 p-4 rounded-full">
                <Icon name="mdi:cloud-outline" class="size-8 text-primary" />
              </div>
              <h3 class="card-title text-xl">Cloud SaaS</h3>
            </div>
            <p class="text-base-content/70 mb-6">
              Managed cloud solution with automatic updates and maintenance
            </p>
            <div class="space-y-2">
              {
                [
                  "No infrastructure setup",
                  "Automatic backups",
                  "Always up-to-date",
                  "Accessible from anywhere",
                  "Managed security",
                  "99.9% uptime SLA",
                ].map((feature) => (
                  <div class="flex items-center gap-2">
                    <Icon
                      name="mdi:check-circle"
                      class="size-4 text-success flex-shrink-0"
                    />
                    <span class="text-sm">{feature}</span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        <div class="card bg-white shadow-lg border border-base-200">
          <div class="card-body">
            <div class="flex items-center gap-4 mb-4">
              <div class="bg-secondary/10 p-4 rounded-full">
                <Icon name="mdi:server-network" class="size-8 text-secondary" />
              </div>
              <h3 class="card-title text-xl">Private Deployment</h3>
            </div>
            <p class="text-base-content/70 mb-6">
              On-premise solution for complete control and data ownership
            </p>
            <div class="space-y-2">
              {
                [
                  "Full data ownership",
                  "On-premise installation",
                  "Custom configurations",
                  "Offline capability",
                  "Complete compliance",
                  "Dedicated support",
                ].map((feature) => (
                  <div class="flex items-center gap-2">
                    <Icon
                      name="mdi:check-circle"
                      class="size-4 text-success flex-shrink-0"
                    />
                    <span class="text-sm">{feature}</span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Security & Compliance -->
  <section class="py-20 px-4 bg-base-100">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary-900 mb-4">
          Enterprise Security & Compliance
        </h2>
        <p class="text-lg text-base-content/70">
          Your data is protected with industry-leading security measures
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          [
            {
              icon: "mdi:shield-lock",
              title: "Data Encryption",
              description: "End-to-end encryption for all data",
            },
            {
              icon: "mdi:lock-check",
              title: "Access Control",
              description: "Role-based access management",
            },
            {
              icon: "mdi:file-document-check",
              title: "Compliance",
              description: "GDPR and data protection ready",
            },
            {
              icon: "mdi:backup-restore",
              title: "Disaster Recovery",
              description: "Automatic backups and recovery",
            },
          ].map((item) => (
            <div class="text-center">
              <div class="flex justify-center mb-4">
                <div class="bg-primary/10 p-4 rounded-full">
                  <Icon name={item.icon} class="size-8 text-primary" />
                </div>
              </div>
              <h3 class="font-bold mb-2">{item.title}</h3>
              <p class="text-sm text-base-content/70">{item.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Integration Ecosystem -->
  <section class="py-20 px-4 bg-primary-50">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary-900 mb-4">
          Integration Ecosystem
        </h2>
        <p class="text-lg text-base-content/70">
          Connect with your existing systems seamlessly
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        {
          [
            { name: "Payment Gateway", icon: "mdi:credit-card" },
            { name: "SMS Service", icon: "mdi:message-text" },
            { name: "Email Service", icon: "mdi:email" },
            { name: "Video Conference", icon: "mdi:video" },
            { name: "Document Storage", icon: "mdi:cloud-upload" },
            { name: "Analytics", icon: "mdi:chart-line" },
          ].map((integration) => (
            <div class="flex flex-col items-center justify-center p-6 rounded-lg bg-white border border-base-200 hover:border-primary hover:shadow-lg transition-all">
              <Icon name={integration.icon} class="size-12 text-primary mb-3" />
              <p class="text-sm font-semibold text-center">
                {integration.name}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 px-4 bg-base-100">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-primary-900 mb-4">
          Trusted by Schools
        </h2>
        <p class="text-lg text-base-content/70">
          See what school administrators say about WeSchool
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          [
            {
              text: "WeSchool has transformed how we manage our school. The automation has freed up hours of administrative work every week.",
              author: "Mrs. Akosile",
              role: "School Principal",
              school: "ROZ Academy",
            },
            {
              text: "Parents love the portal. They can now check their child's progress anytime, anywhere. Communication has never been better.",
              author: "Mr. Segun",
              role: "Vice Principal",
              school: "Bright Minds School",
            },
            {
              text: "The grading system is intuitive and saves us so much time. Our teachers are thrilled with how easy it is to use.",
              author: "Dr. Chioma",
              role: "Academic Director",
              school: "Excellence Academy",
            },
          ].map((testimonial) => (
            <div class="card bg-white border border-base-200 shadow-lg">
              <div class="card-body">
                <div class="flex gap-1 mb-4">
                  {[...Array(5)].map(() => (
                    <Icon name="mdi:star" class="size-5 text-warning" />
                  ))}
                </div>
                <p class="text-base-content/70 mb-6 italic">
                  "{testimonial.text}"
                </p>
