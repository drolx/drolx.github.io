const schoolSizes = [
	{
		name: 'Small Schools',
		students: 'Up to 500 students',
		icon: 'mdi:school-outline',
		features: [
			'Single campus support',
			'Basic reporting',
			'Email support',
			'Up to 50 users',
		],
	},
	{
		name: 'Medium Schools',
		students: '500 - 2000 students',
		icon: 'mdi:school',
		features: [
			'Multiple classes support',
			'Advanced reporting',
			'Phone & email support',
			'Up to 200 users',
			'Custom workflows',
		],
	},
	{
		name: 'Large Institutions',
		students: '2000+ students',
		icon: 'mdi:office-building-outline',
		features: [
			'Multi-campus support',
			'Enterprise analytics',
			'24/7 dedicated support',
			'Unlimited users',
			'Custom development',
			'SLA guarantee',
		],
	},
