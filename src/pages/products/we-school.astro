---
import { Icon } from 'astro-icon/components';
import BreadcrumbSection from '@/components/BreadcrumbSection.astro';
import SolutionCta from '@/components/SolutionCta.astro';
import MainLayout from '../../layouts/MainLayout.astro';

export const title = 'WeSchool';
export const description =
	'Comprehensive cloud-based education ERP platform for modern school management';

const features = [
