---
import { getCollection } from 'astro:content';
import ArticleList from '@/components/ArticleList.astro';
import SecondaryHero from '@/components/SecondaryHero.astro';
import SecondaryHeroStyle from '@/components/SecondaryHeroStyle.astro';
import { BASE_ARTICLE_PATH } from '@/consts';
import MainLayout from '../../../layouts/MainLayout.astro';

export const title = 'Articles & Insights';
export const description =
	'Our various insight on various topics especially on technologies and software';

const collectionPayload = (await getCollection('article')).sort(
	(a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf(),
);
const posts = collectionPayload.map((post) => ({
	id: post.id,
	title: post.data.title,
	description: post.data.description,
	heroImage: post.data.heroImage,
	author: post.data.author,
	publishedAt: post.data.publishedAt,
	tags: post.data.tags,
}));
---

<MainLayout title={title}>
  <SecondaryHero {title} {description}>
    <SecondaryHeroStyle icon="mdi:rss-feed-box" />
  </SecondaryHero>
  <ArticleList baseUrl={BASE_ARTICLE_PATH} {posts} />
</MainLayout>
