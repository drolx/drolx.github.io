---
import { getCollection } from 'astro:content';
import ArticleList from '@/components/ArticleList.astro';
import SecondaryHero from '@/components/SecondaryHero.astro';
import SecondaryHeroStyle from '@/components/SecondaryHeroStyle.astro';
import { BASE_CASE_STUDY_PATH } from '@/consts';
import MainLayout from '../../../layouts/MainLayout.astro';

export const title = 'Case Studies';
export const description =
	'Explore our in-depth case studies showcasing successful projects and solutions.';

const collectionPayload = (await getCollection('caseStudy')).sort(
	(a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf(),
);
const posts = collectionPayload.map((post) => ({
	id: post.id,
	title: post.data.title,
	description: post.data.description,
	heroImage: post.data.heroImage,
	author: post.data.author,
	publishedAt: post.data.publishedAt,
	tags: post.data.tags,
}));
---

<MainLayout title={title}>
  <SecondaryHero {title} {description}>
    <SecondaryHeroStyle icon="mdi:projector-screen-outline" />
  </SecondaryHero>
   <ArticleList baseUrl={BASE_CASE_STUDY_PATH} {posts} />
</MainLayout>
