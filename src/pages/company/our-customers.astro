---
import { Icon } from 'astro-icon/components';
import SecondaryHero from '@/components/SecondaryHero.astro';
import SecondaryHeroStyle from '@/components/SecondaryHeroStyle.astro';
import SolutionCta from '@/components/SolutionCta.astro';
import MainLayout from '../../layouts/MainLayout.astro';

export const title = 'Our Customers';
export const description =
	'A simple overview of some of the organizations that empower us to strive for perfection';

const customers = [
	{
		name: 'DGroup Nigeria',
		industry: 'Telematics & Security',
		icon: 'mdi:laptop',
		description:
			'Leading telematics provider utilizing our fleet management and IoT solutions',
	},
	{
		name: 'Profound Associate',
		industry: 'Telematics & Security',
		icon: 'mdi:laptop',
		description:
			'Technology security partnering on IoT, location & platform integration projects',
	},
	{
		name: 'Onitsha Mass Transit',
		industry: 'Transportation',
		icon: 'mdi:bus',
		description:
			'Urban transportation operator using our real-time tracking solutions',
	},
	{
		name: 'Robust Logistics',
		industry: 'Logistics',
		icon: 'mdi:package-variant',
		description:
			'Logistics company optimizing operations with our cloud solutions',
	},
	{
		name: 'IHS Towers',
		industry: 'Telecommunications',
		icon: 'mdi:antenna',
		description:
			'Telecom infrastructure provider using our pepper-local position agregation solution',
	},
	{
		name: 'Impact Centric',
		industry: 'Technology Services',
		icon: 'mdi:chart-box',
		description:
			'Business solutions provider collaborating on enterprise applications',
	},
	{
		name: 'MarkFleet Nigeria',
		industry: 'Retail & Logistics',
		icon: 'mdi:truck',
		description:
			'Fleet operator leveraging our telematics and tracking platform',
	},
	{
		name: 'ROZ Academy',
		industry: 'Education',
		icon: 'mdi:school',
		description: 'Senior and junior academy for kids',
	},
];

const testimonials = [
	{
		name: 'Nitin Ji',
		role: 'Technical Lead',
		company: 'Robust Logistics',
		text: 'drolx Lab transformed our operations with their pepper local aggregation solution. Their expertise in IoT and logistics has significantly improved our efficiency.',
	},
	{
		name: 'Charles O',
		role: 'CEO',
		company: 'DGroup Nigeria',
		text: 'Working with drolx Lab has been exceptional. Their team understands the logistics industry and delivered solutions that directly impact our bottom line.',
	},
	{
		name: 'Emeka Nweje',
		role: 'Cheif Operation Officer',
		company: 'Onitsha Mass Transit',
		text: 'The custom operation platform developed by drolx Lab has revolutionized how we manage our fleet and interact with our customers. Our customers are happier and operations are more efficient.',
	},
];
---

<MainLayout {title} {description}>
  <SecondaryHero {title} {description}>
    <SecondaryHeroStyle icon="mdi:people-group" />
  </SecondaryHero>

  <!-- Introduction -->
  <section class="py-16 px-4 bg-primary-50">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold text-primary-900 mb-4">
        Trusted by Industry Leaders
      </h2>
      <p class="text-lg text-base-content/70">
        From logistics to telecommunications, our customers across diverse industries
        trust drolx Lab to deliver innovative solutions that drive measurable results.
      </p>
    </div>
  </section>

  <!-- Customers Grid -->
  <section class="py-20 px-4 bg-base-100">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 lg:grid-cols-4 gap-6">
        {
          customers.map((customer) => (
            <div class="card bg-white border border-base-200 hover:shadow-xl transition-shadow h-full">
              <div class="card-body flex flex-col">
                <div class="flex justify-center mb-4">
                  <div class="bg-primary/10 p-4 rounded-full">
                    <Icon name={customer.icon} class="size-8 text-primary" />
                  </div>
                </div>
                <h3 class="card-title text-lg justify-center text-center mb-2">
                  {customer.name}
                </h3>
                <p class="text-xs text-primary font-semibold text-center mb-3">
                  {customer.industry}
                </p>
                <p class="text-sm text-base-content/70 flex-grow">
                  {customer.description}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Key Metrics -->
  <section class="py-20 px-4 bg-gradient-to-r from-primary to-secondary text-white">
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
        {
          [
            { number: "15+", label: "Active Customers" },
            { number: "30+", label: "Successful Projects" },
            { number: "99.9%", label: "Uptime SLA" },
            { number: "24/7", label: "Support Available" },
          ].map((metric) => (
            <div>
              <p class="text-4xl lg:text-5xl font-bold mb-2">{metric.number}</p>
              <p class="text-lg opacity-90">{metric.label}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 px-4 bg-base-100">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-primary-900 mb-4">
          What Our Customers Say
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          testimonials.map((testimonial) => (
            <div class="card bg-white border border-base-200 shadow-lg">
              <div class="card-body">
                <div class="flex gap-1 mb-4">
                  {[...Array(5)].map(() => (
                    <Icon name="mdi:star" class="size-5 text-warning" />
                  ))}
                </div>
                <p class="text-base-content/70 mb-6 italic">
                  "{testimonial.text}"
                </p>
                <div class="border-t pt-4">
                  <p class="font-bold">{testimonial.name}</p>
                  <p class="text-sm text-base-content/70">
                    {testimonial.role}
                  </p>
                  <p class="text-sm text-primary font-semibold">
                    {testimonial.company}
                  </p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Industries Served -->
  <section class="py-20 px-4 bg-primary-50">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-primary-900 mb-4">Industries We Serve</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          [
            { icon: "mdi:truck", label: "Logistics & Transportation" },
            { icon: "mdi:store", label: "Retail" },
            { icon: "mdi:antenna", label: "Telecommunications" },
            { icon: "mdi:school", label: "Education" },
          ].map((industry) => (
            <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
              <div class="card-body items-center text-center">
                <Icon name={industry.icon} class="size-12 text-secondary mb-4" />
                <p class="font-bold">{industry.label}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <SolutionCta
    title="Join Our Growing Customer Base"
    description="Experience how drolx Lab can transform your business"
  />
</MainLayout>

